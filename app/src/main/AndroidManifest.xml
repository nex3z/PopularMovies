<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nex3z.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.ui.activity.MovieGridActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ui.activity.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName=".presentation.ui.activity.MovieGridActivity"
            android:theme="@style/AppTheme.Detail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nex3z.popularmovies.presentation.ui.activity.MovieGridActivity" />
        </activity>

        <provider
            android:name=".data.provider.MovieProvider"
            android:authorities="com.nex3z.popularmovies" />

    </application>

</manifest>